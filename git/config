[credential]
  helper = cache --timeout 3600
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  changelog = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --date=relative --abbrev-commit --graph
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[help]
  autocorrect = 1
[push]
  default = current
[pull]
  rebase = true
[branch "master"]
  remote = origin
  merge = refs/heads/master
[core]
  excludesfile = ~/.gitignore_global
  editor = code
  ignorecase = false
[user]
  name = Paul McBride
  email = hello@paulmcbride.com
[init]
  defaultBranch = main

